@model MemeStoreService.Models.MemeModel

@{
    ViewBag.Title = "Add a Comment";
}

@Html.Partial("_MemeBoxPartial", Model)

<h2>Add a Comment</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Comment</h4>
        <!-- This is a hidden field that only passes the MemeId when posted -->
        <input type="hidden" name="MemeId" value="@Model.MemeId" />
        <hr />
        <div class="form-group">
            <label for="CommentText" class="control-label col-md-2">Text</label>
            <div class="col-md-10">
                @Html.TextBox("Text", "", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}