@model MemeStoreService.Models.MemeModel
@using Microsoft.AspNet.Identity

<div class="memeBox">
    <div class="memeHeader">
        <h3>@Model.Name</h3>
    </div>

    <div class="panel-body memeBody">
        <a href="/Meme/MemeDetail/@Model.MemeId">
        <img src="@Model.ImageUrl" />

        </a>
    </div>

    <div class="panel-footer memeFooter">
        @if (Model.IsDead)
        {
            <span>R.I.P</span>
        }

        @if (User.IsInRole("Admin") || Model.userId == User.Identity.GetUserId()){
            <a href="/Meme/Delete/@Model.MemeId">
                Delete
            </a>
        }
    </div>
</div>